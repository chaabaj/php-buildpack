<% require "shellwords" %>
worker_processes auto;
daemon off;

events {
    worker_connections  1024;
}

http {
    # Hide nginx version information.
    server_tokens off;

    sendfile    on;
    tcp_nopush  on;
    tcp_nodelay off;

    keepalive_timeout  65;

    <% if ENV.has_key?("ACCESS_LOG_FORMAT") and ENV["ACCESS_LOG_FORMAT"].to_s != "" %>
    log_format specialLog '<%= ENV['ACCESS_LOG_FORMAT'].gsub("'", "\\\\'") %>';
    <% else %>
    log_format specialLog '$http_x_forwarded_for - '
                      '"$request" $status $body_bytes_sent '
                      '"$http_referer" "$http_user_agent" '
                      '$request_time';

    <% end %>

    error_log logs/error.log notice;
    access_log logs/access.log specialLog;

    client_max_body_size 75m;
    client_body_timeout 600s;

    upstream php {
        server unix:/tmp/php-fpm.sock max_fails=3 fail_timeout=3s;
        keepalive 16;
    }

    <% if ENV.has_key? "INDEX_DOCUMENT" and ENV['INDEX_DOCUMENT'].to_s != "" %>
    index <%= ENV['INDEX_DOCUMENT'] %> index.html index.htm index.xhtml;
    <% else %>
    index index.html index.htm index.xhtml;
    <% end %>

    include mime.types;
    default_type application/octet-stream;

    set_real_ip_from 0.0.0.0/0;
    real_ip_header X-Forwarded-For;

    # Enable Gzip compression.
    gzip on;
    gzip_http_version 1.0;
    gzip_comp_level 5;
    gzip_min_length 256;
    gzip_proxied any;
    gzip_vary on;
    gzip_types
      application/atom+xml
      application/javascript
      application/x-javascript
      application/json
      application/rss+xml
      application/vnd.ms-fontobject
      application/x-font-ttf
      application/x-web-app-manifest+json
      application/xhtml+xml
      application/xml
      font/opentype
      image/svg+xml
      image/x-icon
      text/css
      text/plain
      text/x-component;
    # text/html is always compressed by HttpGzipModule

    <% Shellwords.split(ENV['NGINX_HTTP_INCLUDES'].to_s).each do |f| %>
    include /app/<%= f %>;
    <% end %>

    server {
        server_name localhost;
        listen <%= ENV['PORT'] %>;

        #Specify a charset
        charset utf-8;

        fastcgi_buffering off;
        fastcgi_buffers 16 16k;
        fastcgi_buffer_size 32k;

        include site.conf;

        <% Shellwords.split(ENV['NGINX_INCLUDES'].to_s).each do |f| %>
        include /app/<%= f %>;
        <% end %>
    }
}
